<view>
    <!--这里需要active属性才能有选中效果-->
    <van-tabbar active="{{curTabId}}" bind:change="handleChange">
        <van-tabbar-item name="main"
                         icon="home-o"
                         class="custom-tab-bar__item {{curTabId === 'main' ? 'custom-tab-bar__item__active' : ''}}">
        </van-tabbar-item>
        <van-tabbar-item name="apps"
                         icon="apps-o"
                         class="custom-tab-bar__item {{curTabId === 'apps' ? 'custom-tab-bar__item__active' : ''}}">
        </van-tabbar-item>
        <van-tabbar-item name="my"
                         icon="user-circle-o"
                         class="custom-tab-bar__item {{curTabId === 'my' ? 'custom-tab-bar__item__active' : ''}}">
        </van-tabbar-item>
    </van-tabbar>
</view>