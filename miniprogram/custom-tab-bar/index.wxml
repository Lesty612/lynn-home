<view>
    <van-tabbar active="0">
        <van-tabbar-item data-id="manage" class="custom-tab-bar__item {{curTabId === 'manage' ? 'custom-tab-bar__item__active' : ''}}" bind:tap="handleTapTab">
            <van-icon slot="icon" name="qr" size="{{iconSize}}"></van-icon>
            <van-icon slot="icon-active" name="qr" size="{{iconSize}}"></van-icon>
        </van-tabbar-item>
        <van-tabbar-item data-id="chart" class="custom-tab-bar__item {{curTabId === 'chart' ? 'custom-tab-bar__item__active' : ''}}" bind:tap="handleTapTab">
            <van-icon slot="icon" name="chart-trending-o" size="{{iconSize}}"></van-icon>
            <van-icon slot="icon-active" name="chart-trending-o" size="{{iconSize}}"></van-icon>
        </van-tabbar-item>
        <van-tabbar-item data-id="my" class="custom-tab-bar__item {{curTabId === 'my' ? 'custom-tab-bar__item__active' : ''}}" bind:tap="handleTapTab">
            <van-icon slot="icon" name="manager-o" size="{{iconSize}}"></van-icon>
            <van-icon slot="icon-active" name="manager-o" size="{{iconSize}}"></van-icon>
        </van-tabbar-item>
    </van-tabbar>
</view>